{
  "id": "timeouts",
  "name": "Timeouts Workflow",
  "version": "1.0",
  "specVersion": "0.7",
  "timeouts": {
    "workflowExecTimeout": {
      "duration": "PT1H",
      "runBefore": "GenerateReport"
    }
  },
  "start": "FirstState",
  "states": [
    {
      "name": "FirstState",
      "type": "event",
      "onEvents": [
        {
          "eventRefs": ["someEventRef"]
        }
      ],
      "timeouts": {
        "stateExecTimeout": "PT5M",
        "eventTimeout": "PT2M"
      },
      "transition": "SecondState"
    },
    {
      "name": "SecondState",
      "type": "parallel",
      "completionType": "allOf",
      "branches": [
        {
          "name": "ShortDelayBranch",
          "timeouts": {
            "branchExecTimeout": "PT3S"
          }
        },
        {
          "name": "LongDelayBranch",
          "timeouts": {
            "branchExecTimeout": "PT4S"
          }
        }
      ],
      "timeouts": {
        "stateExecTimeout": "PT5M"
      },
      "end": true
    }
  ]
}