{
  "type": "object",
  "javaType": "io.serverlessworkflow.api.switchconditions.DataCondition",
  "javaInterfaces": [
    "io.serverlessworkflow.api.interfaces.SwitchCondition"
  ],
  "description": "Switch state data based condition",
  "properties": {
    "path": {
      "type": "string",
      "description": "JSONPath expression that selects elements of state data"
    },
    "value": {
      "type": "string",
      "description": "Matching value"
    },
    "operator": {
      "type": "string",
      "enum": [
        "exists",
        "notexists",
        "null",
        "notnull",
        "equals",
        "notequals",
        "lessthan",
        "lessthanorequals",
        "greaterthan",
        "greaterthanorequals",
        "matches",
        "notmatches",
        "custom"
      ],
      "description": "Condition operator"
    },
    "transition": {
      "$ref": "../transitions/transition.json",
      "description": "Next transition of the workflow if there is valid matches"
    }
  },
  "required": [
    "path",
    "value",
    "operator",
    "transition"
  ]
}